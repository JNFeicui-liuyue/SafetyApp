<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_app_ico"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/azy"
        />

    <TextView
        android:text="QQ"
        android:id="@+id/tv_app_lable"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_app_ico"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_app_ico"
        android:maxLength="6"
        android:singleLine="true"
        android:textSize="22sp"
        />

    <TextView
        android:text="应用程序完整包名"
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/tv_app_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_app_ico"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_app_ico"
        />

    <TextView
        android:id="@+id/tv_app_version"
        android:text="v1.1.1"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_app_ico"
        android:maxLength="10"
        android:singleLine="true"
        />

</RelativeLayout>